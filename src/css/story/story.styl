/* CUSTOM STORY STYLE */


.nav-bar
    max-width: 50rem
    margin 0 auto
    display flex
    flex-direction: row
    justify-content: center


.current-slide-num
    margin 0 1rem
    font-size: 18px

.nav-btn-img
    height 1rem
    width auto
    vertical-align: bottom
    cursor pointer

.btn-back
    display flex
    flex-direction: column
    justify-content: flex-end
    cursor pointer

.btn-fwd
    display flex
    flex-direction: column
    justify-content: flex-end
    cursor pointer

.chart-nav
    display: flex
    flex-direction: row
    justify-content: space-around

.chart-fig
    display: flex
    flex-wrap: wrap

.sentence
    display inline


.chart-static
    max-width 50rem
    margin 0 auto


.chart-static-title
    text-align: left
    font-family: 'Tinos'
    font-size 24px
    font-weight: 600

.chart-static-img
    width 100%
    height auto

.hidden
    display none