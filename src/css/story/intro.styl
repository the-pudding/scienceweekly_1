.intro
  position absolute
  width 100%
  height 100vh
  z-index set-index('overlay')

.cover-container
    display flex
    flex-direction row

.cover-left
  padding 1rem
  font-family 'Open Sans', sans-serif;
  flex-grow 1
  background-color $white
  height 100vh
  display flex
  flex-direction row
  justify-content center
  max-width 50vw
  position relative
  transform translateX(0)
  transition transform 200ms ease-in-out

  &.slide
    transform translateX(-100%)

  .rotate
    position absolute
    top 25%
    transform rotate(-90deg)
    font-family $sans-display
    font-size 100px
    font-weight 700
    text-align right
    width 19rem

  .weekly-wrapper
    position absolute
    left 54.5%
    top 16%
    display flex
    flex-direction row

    .dot-block
      background-color #ff533d
      width 1rem
      height 1rem

    h3
      margin -0.5rem 0 0 0
      padding 0 0 0 0.25rem
      text-transform uppercase
      font-family $sans
      color #ff533d

.cover-right
  padding 1rem
  flex-grow 1
  background-color $off-black
  height 100vh
  max-width 50vw
  position relative
  transform translateX(0)
  transition transform 200ms ease-in-out

  &.slide
    transform translateX(100%)

  .details
    display flex
    flex-direction column
    margin 0 auto
    width 60%
    position absolute
    top 15%
    left 20%
    justify-content flex-start

    svg
      width 10rem
      fill $white

    p
      color $white
      font-family $sans
      set-type-size('root', true)
      margin 0.25rem 0 2rem 0

      a
        font-weight 600
        color $white
        border-bottom 1px solid $white

        &:hover
          color $gray
          border-bottom 1px solid $gray

    .weeks
      display flex
      flex-direction column

      .week
        display flex
        flex-direction row
        border-bottom 1px solid $white
        padding 0.5rem 0
        justify-content space-between

        .date
          width 10rem
          color #ff533d
          font-weight 600
          font-family $sans-display
          text-transform uppercase
          padding 0
          margin 0

        .topic
          padding 0
          margin 0

  .arrow
    position absolute
    right 3rem
    bottom 3rem
    width 3.5rem
    height 3.5rem
    cursor pointer
    display flex
    justify-content center
    align-items center

    .button-circle
      position absolute
      width 3.5rem
      height 3.5rem
      background-color #ff533d
      border-radius 50%
      display flex
      justify-content center
      align-items center
      animation pulse-dot 1.25s cubic-bezier(0.455, 0.03, 0.515, 0.955) -.4s infinite

      svg
        stroke $white
        width 60%
        height 60%
        pulse-svg 1.25s cubic-bezier(0.455, 0.03, 0.515, 0.955) -.4s infinite

    .pulse-circle
      position absolute
      width 5rem
      height 5rem
      background-color $white
      border-radius 50%
      animation pulse-ring 1.25s cubic-bezier(0.215, 0.61, 0.355, 1) infinite


@keyframes pulse-ring {
  0% {
    transform: scale(.33);
  }
  80%, 100% {
    opacity: 0;
  }
}

@keyframes pulse-dot {
  0% {
    transform: scale(.8);
  }
  50% {
    transform: scale(1);
  }
  100% {
    transform: scale(.8);
  }
}

@keyframes pulse-dot {
  0% {
    transform: scale(.8);
  }
  50% {
    transform: scale(1);
  }
  100% {
    transform: scale(.8);
  }
}
