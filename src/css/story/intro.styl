.intro
  position absolute
  width 100%
  height 100vh
  z-index set-index('overlay')

.cover-container
    display flex
    flex-direction column
    +mq('bp-4')
      flex-direction row

.cover-left
  padding 1rem  
  font-family 'Open Sans', sans-serif;
  flex-grow 1
  background-color $white
  height 30vh
  display flex
  flex-direction row
  justify-content center
  max-width none
  width 100%
  position relative
  transform translateX(0)
  transform translateY(0)
  transition transform 200ms ease-in-out
  +mq('bp-4')
    max-width 50vw
    height 100vh

  &.slide
    transform translateY(-100%)
    +mq('bp-4')
      transform translateX(-100%)

  .rotate
    position absolute
    top 15%
    transform rotate(0deg)
    font-family $sans-display
    font-size 100px
    font-weight 700
    text-align left
    +mq('bp-4')
      transform rotate(-90deg)
      top 25%
      text-align right

  .title-wrap
    width 80%
    margin 0 auto
    display flex
    justify-content center
    align-items center
    +mq('bp-4')
      width 100%
      padding 0

    svg
      width 100%
      transform rotate(0deg)
      +mq('bp-4')
        width 100%
        transform rotate(-90deg)

  .weekly-wrapper
    position absolute
    left 75%
    top 49%
    display flex
    flex-direction column
    +mq('bp-4')
      flex-direction row
      left 54.5%
      top 16%

    .dot-block
      background-color #ff533d
      width 1rem
      height 1rem

    h3
      margin 0 0 0 -3.55rem
      padding 0 0 0 3.5rem
      text-transform uppercase
      font-family $sans
      color #ff533d
      transform rotate(90deg)
      +mq('bp-4')
        transform rotate(0deg)
        margin -0.5rem 0 0 0
        padding 0 0 0 0.25rem

.cover-right
  padding 1rem
  flex-grow 1
  background-color $off-black
  height 70vh
  max-width none
  width 100%
  position relative
  transform translateX(0)
  transform translateY(0)
  transition transform 200ms ease-in-out
  +mq('bp-4')
    max-width 50vw
    height 100vh
    display flex 
    flex-direction column
    justify-content: center

  &.slide
    transform translateY(100%)
    +mq('bp-4')
      transform translateX(100%)

  .details
    display flex
    flex-direction column
    margin 3rem auto 0 auto
    width 80%
    // position absolute    
    // top 15%    
    // left 20%
    // justify-content flex-start   
    justify-content center    

    svg
      width 10rem
      fill $white

    p
      color $white
      font-family $sans
      set-type-size('medium', true)
      margin 0.25rem 0 2rem 0

      a
        font-weight 600
        color $white
        border-bottom 1px solid $white

        &:hover
          color $gray
          border-bottom 1px solid $gray

    .weeks
      display flex
      flex-direction column

      .week
        display flex
        flex-direction row
        border-bottom 1px solid $white
        padding 0.5rem 0
        justify-content space-between
        set-type-size('xxx-large', true)

        .date
          width 10rem
          color #ff533d
          font-weight 600
          font-family $sans-display
          text-transform uppercase
          padding 0
          margin 0

        .topic
          padding 0
          margin 0

  .arrow
    position absolute
    right 1rem
    top 1rem
    width 3.5rem
    height 3.5rem
    cursor pointer
    display flex
    justify-content center
    align-items center
    +mq('bp-3')
        top auto
        bottom 2rem

    .button-circle
      position absolute
      width 3.5rem
      height 3.5rem
      background-color #ff533d
      border-radius 50%
      display flex
      justify-content center
      align-items center
      animation pulse-dot 1.15s cubic-bezier(0.455, 0.03, 0.515, 0.955) -.4s infinite

      svg
        stroke $white
        width 60%
        height 60%
        pulse-svg 1.15s cubic-bezier(0.455, 0.03, 0.515, 0.955) -.4s infinite

    .pulse-circle
      position absolute
      width 6rem
      height 6rem
      background-color $white
      border-radius 50%
      animation pulse-ring 1.15s cubic-bezier(0.215, 0.61, 0.355, 1) infinite


@keyframes pulse-ring {
  0% {
    transform: scale(.33);
  }
  80%, 100% {
    opacity: 0;
  }
}

@keyframes pulse-dot {
  0% {
    transform: scale(.8);
  }
  50% {
    transform: scale(1);
  }
  100% {
    transform: scale(.8);
  }
}

@keyframes pulse-dot {
  0% {
    transform: scale(.8);
  }
  50% {
    transform: scale(1);
  }
  100% {
    transform: scale(.8);
  }
}
