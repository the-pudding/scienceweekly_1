.cover-container
    display flex
    flex-direction: row    

.cover-left
    font-family: 'Open Sans', sans-serif;
    flex-grow: 1
    background-color: white
    height 100vh
    display: flex
    flex-direction: column
    justify-content: center
    max-width: 50vw
    img
        height: 100vh

.cover-left-top

.cover-left-bottom

.cover-left-para
    text-align: center

.cover-left-vert-text
    // max-width: 20rem
    // margin 0 auto
    
    display block
    -webkit-transform: rotate(270deg);	
    -moz-transform: rotate(270deg);	
    -ms-transform: rotate(270deg);	
    -o-transform: rotate(270deg);	
    transform: rotate(270deg);	
    text-align: center
    
.cover-right-vert-text
    text-align: center

.cover-right
    flex-grow: 1
    background-color: black
    height 100vh
    max-width: 50vw
    img
        height: 100vh

.slide-out
    transition: 1s;
    left -100vw


.intro
    margin 0 auto
    // padding 6rem 1rem 3rem 1rem
    padding 0


	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
	
	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

.header
	max-width: 80rem
	margin 0 auto
    
.intro__hed
	max-width 80rem
	margin 0 auto
	text-align left
	font-family: 'Tinos'
	font-size: 36px
	font-weight 600
	margin-top 3rem

.intro__byline
	max-width 80rem
	margin 0 auto
	margin-top 1rem
	text-align left
	font-size 24px
	font-family: 'Tinos'
	a
		text-decoration: none

.intro__address
	// text-align: left
	font-style: italic
	font-size: 18px
	max-width 80rem
	margin 0 auto
	margin-top 1rem
	padding-bottom 1rem
	border-bottom-style: solid
	border-bottom-color: black
	border-bottom-width: 2px

.pre-article-box
	max-width: 80rem
	margin 0 auto
	font-size: 18px
	padding-top 1rem
	display: flex
	flex-direction: row

.article-info
	flex-grow: 1

.article-abstract
	flex-grow: 4
	margin-left 5rem

.article-info-title
	padding-bottom: 1rem
	border-bottom-style: solid
	border-bottom-color: #000
	border-bottom-width: 2px
	font-size: 16px
	width 10rem

.keywords-title
